# Email Configuration (IMAP)
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USER=seu-email@gmail.com
EMAIL_PASSWORD=sua-senha-ou-app-password
EMAIL_FOLDER=INBOX
EMAIL_SUBJECT_FILTER=Novo Agendamento

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# MinasTaxi API
MINASTAXI_API_URL=https://api.minastaxi.com.br
MINASTAXI_API_KEY=your-minastaxi-api-key-here
MINASTAXI_TIMEOUT=30
MINASTAXI_RETRY_ATTEMPTS=3

# Geocoding (Google Maps - Opcional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
# Se n√£o tiver Google Maps, o sistema usa Nominatim (gratuito)
USE_GOOGLE_MAPS=false

# Database
DATABASE_PATH=data/taxi_orders.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/taxi_automation.log

# Processing
PROCESS_INTERVAL_SECONDS=300
ENABLE_CLUSTERING=true

# WhatsApp Notifications (Evolution API)
EVOLUTION_API_URL=https://evolution.example.com
EVOLUTION_API_KEY=your-evolution-api-key-here
EVOLUTION_INSTANCE_NAME=taxi-bot
ENABLE_WHATSAPP_NOTIFICATIONS=true
